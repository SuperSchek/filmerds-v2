{% extends 'layouts/default' %}

{% block 'main' %}
  {% if site.metafields.misc_settings.production == true %}
      {% include tracking_body %}
  {% endif %}

  {% include navigation %}
  
  <div class="container" style="padding-top: 20px;">
    {% comment %} <section class="pt-50">
      <div class="row">
        <div class="col-12">
          <div style="background-color: #385c80; padding: 1px 25px;">
            <h2 style="color: #FFF;">De Filmerds Filmquiz #2!</h2>
            <h4 style="margin-top: 0; color: #FFF; margin-bottom: 15px;">We gaan live op 20 april om 20:00!</h4>
            <a class="btn-nav" style="margin-bottom: 20px;" href="/filmquiz">Meer info!</a>
          </div>                      
        </div>
      </div>
    </section> {% endcomment %}

    <section class="pt-50">
       <div class="row">
        <div class="col-12">          

            <amp-youtube class="youtube-player"
                        width="1920"
                        height="1080"
                        class="youtube-player"
                        layout="responsive"
                        data-videoid="g6U20NFRd8w"
                        data-param-loop="1"
                        data-param-playlist="g6U20NFRd8w"
                        data-param-widget_referrer="{{ url }}"
                        data-param-modestbranding="1"
                        autoplay>
            </amp-youtube>

        </div>
      </div>      
    </section>

    <section class="pb-50">
      <div class="row">
        <div class="col-12">      
          <h2>
            Bekijk onze podcasts!      
          </h2>
        </div>        
      </div>

      <div class="row">
        {% with_scope publication_date.lte: now %}
          {% paginate contents.podcasts by 6 %}
            {% for podcast in paginate.collection %}

              <div class="col-4 col-md-6 col-sm-12">
                {% include 'card_podcast' with podcast: podcast %}
              </div>

            {% endfor %}
          {% endpaginate %}
        {% endwith_scope %}
      </div>

      <div class="row">
        <div class="fw center pt-25">
          <a class="btn-nav" href="/archief">Meer afleveringen!</a>
        </div>
      </div>
    </section>

    {% comment %} <section class="section section--instagram">
      <div class="row">
        <div class="col-12">      
          <h2>
            {% editable_text 'Instgram', format: raw, rows: 1 %}
              Filmerds op Instagram!
            {% endeditable_text %}
          </h2>
        </div>
      </div>

      <div class="row">
        {% for post in contents.instagram_posts %}
          {% unless forloop.index > 3 %}
            
            {% assign shortcode = post.url | remove: 'https://www.instagram.com/p/' | remove: '/?taken-by=filmerds' %}
            <div class="col-4 col-sm-12">
              <amp-instagram
                data-shortcode="{{ shortcode }}"
                width="1"
                height="1"
                layout="responsive">
              </amp-instagram>
            </div>

          {% endunless %}
        {% endfor %}
      </div>
    </section> {% endcomment %}

  </div>

{% endblock %}
